	private static void initializePlayer() {
		System.out.print("\033[H\033[2J");  
	    System.out.flush();
		System.out.println("Enter your name :");
		String name = in.nextLine();
		name = in.nextLine();
		
		System.out.println("Enter your age:");
		int age = in.nextInt();

		player1 = new Player(name, age);
		player1.welcome();

	}
	public static void clscr() {
		System.out.print("\033[H\033[2J");
		System.out.flush();
	}
	public static void main(String[] args) {

		
		createRoom();
		char ch;
				
		int check=9;

		while(true){
			System.out.println("What do you want to do"
					+ "\n1.Go to Game"
					+ "\n2.View Leaderboard"
					+ "\n3.Exit");
			check=in.nextInt();
		switch(check){
			case 1:
				clscr();
				System.out.println(
						"Welcome to the King's palace. This is the year 1867. You are now landing in the rein of Tipu Sultan, the King.\n"
								+ " The Great Queen Victoria has assiged you a mission.\n"
								+ "Your mission if you chose to accept it is to enter the highly secure palace of Tipu Sultan"
								+ "and steal his GREAT GOLD SWORD\n");
				System.out.println("Do you wish to play? (y/n) : ");
				ch = in.next().charAt(0);

				if (ch == 'n' || ch == 'N')
					System.exit(0);
				
				initializePlayer();
				
				player1.StartGame();
				Game gotogame=new Game(player1,r1,r2,r3,r4,r5,mr);

				gotogame.start();
				break;
			case 2:
				showLeaderBoard();
				break;
			case 3:
				System.exit(0);
		};
		check=in.nextInt();

		}
	}

	private static void showLeaderBoard() {
		try {
	         FileInputStream fileIn = new FileInputStream("leaderBoard.ser");
	         ObjectInputStream in = new ObjectInputStream(fileIn);
	         leaders = (ArrayList) in.readObject();
	         in.close();
	         fileIn.close();
	      } catch (IOException e) {
	    	  if(leaders.size()<=0){
	    		  System.out.println("leader board is empty");
	    	  }
//	    	  for(int i=0;i<10;i++){
//	  			leanew Player("",0));
	         
	  		
	      } catch (ClassNotFoundException c) {
	         System.out.println("Employee class not found");
	         c.printStackTrace();
	      }
		 System.out.println("name\t\t\tscore\t\t\ttimeTaken");
		for (int i = 0; i < leaders.size(); i++) {
			 Player topper=leaders.get(i);
			 System.out.println(topper.playerName+"\t\t\t"+topper.score+"\t\t\t"+topper.timeTaken);
			
		}
		
		
	}
